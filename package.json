{
    "name": "sorter-generator",
    "version": "1.0.0",
    "description": "web application that allows users to generate custom sorters and use said sorters",
    "main": "index.js",
    "scripts": {
        "start": "node build/bundle.js",
        "build:prod": "rm -rf build && rm -rf public && webpack  --config webpack.server.js && webpack -p --config webpack.client.prod.js --mode production",
        "heroku-postbuild": "npm install && npm run build:prod",
        "webpack-prod": "webpack -p --progress --config webpack.client.prod.js --mode production",
        "dev": "npm run build-server && npm-run-all --parallel dev:*",
        "build-server": "webpack --config webpack.server.js",
        "dev:build-server": "webpack --config webpack.server.js --watch",
        "dev:build-client": "webpack --config webpack.client.js --watch",
        "dev:server": "nodemon --watch build --exec \"node build/bundle.js\"",
        "precommit": "pretty-quick --staged"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Dusk252/sorter-generator.git"
    },
    "keywords": [
        "sorter",
        "generator",
        "character"
    ],
    "author": "Dusk252",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Dusk252/sorter-generator/issues"
    },
    "homepage": "https://github.com/Dusk252/sorter-generator#readme",
    "dependencies": {
        "@babel/polyfill": "^7.8.7",
        "axios": "^0.19.2",
        "bcrypt": "^5.0.0",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-jwt": "^5.3.3",
        "helmet": "^3.22.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.20",
        "mongodb": "^3.5.7",
        "morgan": "^1.10.0",
        "oauth-1.0a": "^2.2.6",
        "passport": "^0.4.1",
        "passport-custom": "^1.1.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "prop-types": "^15.7.2",
        "react": "16.13.0",
        "react-dom": "16.13.0",
        "react-helmet": "5.2.1",
        "react-lazy-load-image-component": "^1.4.1",
        "react-redux": "7.2.0",
        "react-router-config": "5.1.1",
        "react-router-dom": "5.1.2",
        "redux": "4.0.5",
        "redux-thunk": "2.3.0",
        "serialize-javascript": "^5.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "@babel/preset-react": "^7.8.3",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.0.6",
        "babel-minify-webpack-plugin": "^0.3.1",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
        "compression-webpack-plugin": "^6.0.2",
        "concurrently": "5.2.0",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-config-react-app": "^3.0.7",
        "eslint-plugin-flowtype": "^2.50.3",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react-hooks": "^2.5.0",
        "lint-staged": "^10.1.3",
        "husky": "^4.2.3",
        "nodemon": "2.0.2",
        "npm-run-all": "4.1.5",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "uglifyjs-webpack-plugin": "^2.2.0",
        "webpack": "4.43.0",
        "webpack-bundle-analyzer": "^3.7.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "4.2.2",
        "webpack-node-externals": "1.7.2"
    }
}
